<div class="list-product-trending" style="margin-top: 100px;">
    <div class="container">
        <div class="intro-product-trending">
            <div class="intro-content">
                <h1 class="intro-content-des">Nước hoa xu hướng</h1>
            </div>
        </div>
        <hr>
        <div class="row" style="margin-top: 40px;">
            @foreach (var item in ViewBag.listTrending)
            {
                <div class="col product-trending">
                    <div class="card">
                        <img src="~/img/img-product/@item.ProductID-01.png" class="card-img-top" alt="Sản phẩm 01">
                        <div class="card-body">
                            <h1 class="card-title-brand">@item.CategoryName</h1>
                            <h3 class="card-title-productName">@item.ProductName @*<span class="card-capacity">105ml</span>*@</h3>
                            <span class="card-product-price">@item.ProductPrice.ToString("C0").Replace(",", ".").Substring(1)<span> ₫</span></span>
                            <h4 class="card-product-gender">Nước hoa cho @item.ProductGender.ToLower()</h4>
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.ProductID" class="btn btn-outline-success card-view-detail">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
            
        </div>

        <div class="intro-view-all">
            <a class="btn btn-outline-dark btn-view-all" href="#">
                Xem tất cả
            </a>
        </div>
    </div>
</div>



